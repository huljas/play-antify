<?xml version="1.0" encoding="UTF-8"?>
<project name="play-antify" basedir="." default="jar">

    <property name="src.dir" value="src"/>
    <property name="classes.dir" value="build/classes"/>

    <path id="compile.classpath">
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="clean" description="Delete all generated files">
        <delete dir="${classes.dir}" failonerror="false"/>
        <delete file="build/${ant.project.name}.jar"/>
    </target>

    <target name="compile" description="Compiles the Task">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="compile.classpath"/>
    </target>

    <target name="jar" description="JARs the Task" depends="compile">
        <jar destfile="build/${ant.project.name}.jar" basedir="${classes.dir}"/>
    </target>

    <target name="test-it" depends="clean,compile,jar">
        <property name="play.path" value="../play"/>
        <taskdef classname="play.ant.PlayModulesClasspathTask" name="playmodules-classpath">
            <classpath>
                <path refid="compile.classpath"/>
                <pathelement location="build/${ant.project.name}.jar"/>
            </classpath>
        </taskdef>
        <taskdef classname="play.ant.PlayConfLoadTask" name="playconfload">
            <classpath>
                <path refid="compile.classpath"/>
                <pathelement location="build/${ant.project.name}.jar"/>
            </classpath>
        </taskdef>

        <playmodules-classpath playId="%serverB" srcFile="${basedir}/test/test-application.conf"/>
        <playconfload playId="%test" srcfile="${basedir}/test/test-application.conf"/>
    </target>

</project>

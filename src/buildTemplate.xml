<?xml version="1.0" encoding="UTF-8"?>

<project name="%APPLICATION_NAME%" default="compile" basedir=".">

    <property name="play.path" value="%PLAYHOME%"/>

    <property name="antify.path" value="%ANTIFYHOME%"/>

     <!-- includes antcontrib tasks -->
    <taskdef resource="net/sf/antcontrib/antcontrib.properties">
        <classpath>
            <pathelement location="${antify.path}/lib/ant-contrib-0.6.jar"/>
        </classpath>
    </taskdef>

    <!-- classpath for compiling and running play -->
    <path id="play.classpath">
        <pathelement path="${play.path}/framework/classes"/>
        <fileset dir="${play.path}/framework/lib">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="${play.path}/framework">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="lib" erroronmissingdir="false">
            <include name="*.jar"/>
        </fileset>
%MODULES_CLASSES%
    </path>

    <!-- classpath for running play in test mode -->
    <path id="test.classpath">
        <path refid="play.classpath"/>
        <fileset dir="${play.path}/modules/testrunner/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <!-- classpath for firephoque test runner -->
    <path id="testrunner.classpath">
        <fileset dir="${play.path}/modules/testrunner/lib">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="${play.path}/modules/testrunner/firephoque">
            <include name="*.jar"/>
        </fileset>
    </path>

    <!-- module sources, used when running compile -->
    <path id="compile.modulesrc">
%MODULES_SOURCES%
    </path>

    <!-- macro for the play python script in case you need it
         usage example:
            <target name="help">
                <play command="help"/>
            </target>
    -->
    <macrodef name="play-python">
        <attribute name="command"/>
        <sequential>
            <exec executable="cmd.exe" osfamily="winnt">
                <arg line="/c ${play.path}/play.bat @{command}"/>
            </exec>
            <exec executable="python" osfamily="unix">
                <arg line="${play.path}/play @{command}"/>
            </exec>
        </sequential>
    </macrodef>

    <target name="clean" description="Cleans the tmp folder">
        <delete dir="tmp" failonerror="false"/>
    </target>

    <target name="compile" description="Compile all java sources">
        <mkdir dir="tmp/classes"/>
        <javac srcdir="app" destdir="tmp/classes" debug="true">
            <classpath refid="play.classpath"/>
            <sourcepath refid="compile.modulesrc"/>
        </javac>
    </target>

    <target name="play-run" description="Runs the application">
        <java classname="play.server.Server" fork="yes" failonerror="yes">
            <classpath refid="play.classpath"/>
            <jvmarg line="-javaagent:${play.path}/framework/play.jar"/>
            <sysproperty key="play.id" value=""/>
            <sysproperty key="application.path" value="${basedir}"/>
        </java>
    </target>

    <target name="play-test" description="Run the application in test mode">
        <java classname="play.server.Server" fork="yes" failonerror="yes">
            <classpath refid="test.classpath"/>
            <jvmarg line="-javaagent:${play.path}/framework/play.jar"/>
            <sysproperty key="play.id" value="test"/>
            <sysproperty key="application.path" value="${basedir}"/>
        </java>
    </target>

    <target name="precompile" description="Compile all java sources and templates">
        <java classname="play.server.Server" fork="yes" failonerror="yes">
            <classpath refid="play.classpath"/>
            <jvmarg line="-javaagent:${play.path}/framework/play.jar"/>
            <sysproperty key="application.path" value="${basedir}"/>
            <sysproperty key="play.id" value=""/>
            <sysproperty key="precompile" value="true"/>
        </java>
    </target>

    <target name="auto-test" description="Automatically run all application tests">
        <delete dir="${basedir}/tmp"/>

        <!-- Start server to the background -->
        <forget>
            <java classname="play.server.Server" fork="yes" failonerror="yes" output="${basedir}/logs/system.out">
                <classpath refid="test.classpath"/>
                <jvmarg line="-javaagent:${play.path}/framework/play.jar"/>
                <sysproperty key="play.id" value="test"/>
                <sysproperty key="application.path" value="${basedir}"/>
            </java>
        </forget>

        <!-- Wait a bit for the server to come up, then run the tests -->
        <sleep seconds="5"/>
        <java classname="play.modules.testrunner.FirePhoque" fork="yes" failonerror="yes">
            <classpath refid="testrunner.classpath"/>
            <sysproperty key="application.url" value="http://localhost:9000"/>
        </java>

        <!-- Check if the test was success -->
        <fail message="There were test failures.">
            <condition>
                <not>
                    <resourcecount count="1">
                        <fileset dir="${basedir}/test-result" includes="result.passed"/>
                    </resourcecount>
                </not>
            </condition>
        </fail>
    </target>

</project>
